<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gazebo_gui" default="true"/>
  <!-- TCP offset parameters -->
  <arg name="tcp_xyz" default="0 0 0"/>
  <arg name="tcp_rpy" default="0 0 0"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <!-- send robot urdf to param server (evaluate xacro with TCP args) -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find obj_manipulation)/src/scout_xarm_gripper.xacro' tcp_xyz:='$(arg tcp_xyz)' tcp_rpy:='$(arg tcp_rpy)'" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -x 0 -y 0 -z 0"
    respawn="false" output="screen" />

  <include file="$(find scout_xarm_moveit_config)/launch/ros_controllers.launch"/>

</launch>
